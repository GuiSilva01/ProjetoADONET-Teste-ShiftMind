@model UsuarioModel

@{
    ViewBag.Title = "Delete";
}

@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@

<!-- MAIN CONTENT -->
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="glyphicon glyphicon-remove-circle"></i>
                Deletar
                <span>
                    >
                    @Html.ActionLink("Usuário", "Usuarios")
                </span>
            </h1>
        </div>
    </div>
    <!-- widget grid -->
    <div id="widget-grid" class="">


        <!-- START ROW -->

        <div class="row">

            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-6">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-building"></i> </span>
                        <h2>Deletar realmente deletar o usuário <b>@Model.Nome</b> ?</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("Delete", "ControleAcesso", FormMethod.Post, new { id = "checkout-form", @class = "smart-form", novalidate = "novalidate" }))
                            {
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-building"></i>
                                                <input type="text" name="nome" placeholder="Nome" disabled="disabled" value="@Html.DisplayFor(model => model.Nome)">
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-list-alt"></i>
                                                <input type="text" name="email" placeholder="E-mail" disabled="disabled" value="@Model.Email">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-building"></i>
                                                <input type="text" name="password" placeholder="Senha" disabled="disabled" value="******">
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-list-alt"></i>
                                                <input type="text" name="grupo" placeholder="Grupo de Permissão" disabled="disabled" value="@Html.DisplayFor(model => model.Grupo)">
                                            </label>
                                        </section>
                                    </div>
                                    <div class="row">
                                        <section class="col col-3">
                                            <label class="toggle">
                                                <input type="checkbox" name="ativo" @(Model.Ativo ? "checked" : "") disabled="disabled">
                                                <i data-swchon-text="SIM" data-swchoff-text="NÃO"></i>Ativo?
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>

                                using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <footer>
                                        <input type="submit" value="Deletar" class="btn btn-primary" />
                                        <input type="button" value="Voltar" class="btn btn-primary" onclick="location.href='@Url.Action("Usuarios", "ControleAcesso")'" />
                                    </footer>
                                }
                            }
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>

<!-- END MAIN CONTENT -->

